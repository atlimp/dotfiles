#!/bin/bash

config=("backgrounds" "conky" "openbox" "pcmanfm" "sakura" "tint2")
dots=(".aliases" ".bash_profile" ".bashrc" ".func" ".profile" ".vimrc" ".xinitrc")
path=$(dirname $(realpath $0))
mkdir -p $HOME/.config

for i in "${config[@]}"; do
	rm -r "$HOME/.config/$i"
	ln -sfv "$path/$i" "$HOME/.config/"
done

for i in "${dots[@]}"; do
	ln -sfv "$path/$i" $HOME/ 
done
