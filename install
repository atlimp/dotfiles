#!/bin/bash

packages=(
	"neofetch"
	"vim"
	"fortune"
	"fortunes-off"
	"cowsay"
	"openbox"
	"pcmanfm"
	"conky"
	"sakura"
	"tint2"
	"compton"
	"xorg"
	"i3lock"
	"dmenu"
	"feh"
	"network-manager"
	"pavucontrol"
	"scrot"
	"imagemagick"
